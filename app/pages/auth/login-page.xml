<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="page">
    <ActionBar title="Login" class="action-bar" />
    
    <StackLayout class="p-4">
        <Label text="Welcome to Inqut" class="text-2xl font-bold text-center mb-8" />
        
        <TextField hint="Email" text="{{ email }}" keyboardType="email" autocorrect="false" autocapitalizationType="none" class="input-field" />
        <TextField hint="Password" text="{{ password }}" secure="true" class="input-field" />
        
        <Button text="Login" tap="{{ onLogin }}" class="btn-primary mb-4" />
        <Button text="Register" tap="{{ onRegisterTap }}" class="-outline mb-4" />
        
        <ActivityIndicator busy="{{ isLoading }}" class="m-4" />
    </StackLayout>
</Page>